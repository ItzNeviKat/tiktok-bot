{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    "outDir": "./build",
    "rootDir": "./src",
    
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    "types": ["node"],

    "strict": true,
    "strictPropertyInitialization": false,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  
  "include": ["src"]
}